<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.formeditorscreen.EditExperienceDetailsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_fillDetails_editExperienceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="Fill all details"
        android:textColor="@color/primaryDarkColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="95dp"
        android:layout_marginStart="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@+id/textView_fillDetails_editExperienceDetails"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/textView_enterCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Enter Company name: "
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fillDetails_editExperienceDetails" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_enterCompanyName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:background="@drawable/custom_edittext_shape"
        android:hint="eg - abc company LTD"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_enterCompanyName" />

    <TextView
        android:id="@+id/textView_enterCompanyExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Enter year of experience in Company: "
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_enterCompanyName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_companyExperience"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/custom_edittext_shape"
        android:hint="eg - 2 years"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_enterCompanyExperience" />

    <TextView
        android:id="@+id/textView_totalYearOfExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Enter total year of experience :"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_companyExperience" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_totalYearOfExperience"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/custom_edittext_shape"
        android:hint="eg - 5 years"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_totalYearOfExperience" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_saveExperienceDetails"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Save Experience Details"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/custom_shape_dark_button"
        app:layout_constraintTop_toBottomOf="@id/editText_totalYearOfExperience"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>