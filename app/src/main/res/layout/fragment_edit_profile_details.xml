<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.formeditorscreen.EditProfileDetailsFragment">

    <TextView
        android:id="@+id/textView_fillForm_EditProfileDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/fill_all_details"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/primaryDarkColor"
        android:fontFamily="@font/alice_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/dp_10" />

    <TextView
        android:id="@+id/textView_enterName_EditProfileDetails"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_name"
        android:textSize="@dimen/sp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/black"
        android:fontFamily="@font/alice_regular"
        app:layout_constraintTop_toBottomOf="@+id/textView_fillForm_EditProfileDetails"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_enterName_EditProfileDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/custom_edittext_shape"
        android:fontFamily="@font/alice_regular"
        android:hint="@string/eg_vijay_joseph"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_enterName_EditProfileDetails" />

    <TextView
        android:id="@+id/textView_enterMobile_EditProfileDetails"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_mobile_number"
        android:textSize="@dimen/sp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/black"
        android:fontFamily="@font/alice_regular"
        app:layout_constraintTop_toBottomOf="@id/editText_enterName_EditProfileDetails"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_userMobileNumber_EditProfileDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/custom_edittext_shape"
        android:fontFamily="@font/alice_regular"
        android:hint="@string/eg_91_0011233445"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_enterMobile_EditProfileDetails" />


    <TextView
        android:id="@+id/textView_enterAddress_EditProfileDetails"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_user_address"
        android:textSize="@dimen/sp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/black"
        android:fontFamily="@font/alice_regular"
        app:layout_constraintTop_toBottomOf="@id/editText_userMobileNumber_EditProfileDetails"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_userAddress_EditProfileDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/custom_edittext_shape"
        android:fontFamily="@font/alice_regular"
        android:hint="@string/a_p_vimanagar_pune_maharashtra_1234"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_enterAddress_EditProfileDetails" />


    <TextView
        android:id="@+id/textView_enterEmail_EditProfileDetails"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_user_email"
        android:textSize="@dimen/sp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/black"
        android:fontFamily="@font/alice_regular"
        app:layout_constraintTop_toBottomOf="@id/editText_userAddress_EditProfileDetails"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_userEmail_EditProfileDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/custom_edittext_shape"
        android:fontFamily="@font/alice_regular"
        android:hint="@string/abc123_gmail_com"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_enterEmail_EditProfileDetails" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_saveProfiledata_editProfileDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editText_userEmail_EditProfileDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="save" />

</androidx.constraintlayout.widget.ConstraintLayout>