<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.formeditorscreen.FormEditorScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textView_formEditorScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Resume form"
            android:textColor="@color/primaryDarkColor"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="95dp"
            android:layout_marginStart="95dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/primaryDarkColor"
            app:layout_constraintTop_toBottomOf="@+id/textView_formEditorScreen"
            tools:layout_editor_absoluteX="-16dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_profileInfo_editorFormScreen"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="11dp"
            android:src="@drawable/ic_svg_viewer_account"
            app:layout_constraintTop_toBottomOf="@id/divider_1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_editProfile_formEditorScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button_shape"
            android:text="@string/edit_profile_details"
            android:textSize="@dimen/sp_20"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintLeft_toRightOf="@id/imageView_profileInfo_editorFormScreen"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_constraintTop_toBottomOf="@id/divider_1" />


        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/primaryDarkColor"
            app:layout_constraintTop_toBottomOf="@id/button_editProfile_formEditorScreen" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_education_editorFormScreen"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_svg_viewer_education"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_2" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_editEducation_formEditorScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/custom_button_shape"
            android:text="@string/edit_education_details"
            android:textSize="@dimen/sp_20"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintLeft_toRightOf="@id/imageView_education_editorFormScreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_2" />

        <View
            android:id="@+id/divider_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/dp_40"
            android:paddingTop="@dimen/dp_40"
            android:layout_marginEnd="15dp"
            android:background="@color/primaryDarkColor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_editEducation_formEditorScreen" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_skills_editorFormScreen"
            android:layout_width="60dp"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/ic_svg_viewer_skills"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_editSkills_formEditorScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button_shape"
            android:text="@string/edit_skills"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_40"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintLeft_toRightOf="@id/imageView_skills_editorFormScreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_3" />


        <View
            android:id="@+id/divider_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/primaryDarkColor"
            app:layout_constraintTop_toBottomOf="@id/button_editSkills_formEditorScreen" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/textView_optionalText_formEditorScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/optional_info"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_5" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_project_editorFormScreen"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="36dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_svg_viewer_project"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_editProject_formEditorScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button_shape"
            android:text="@string/edit_project_details"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_40"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintLeft_toRightOf="@id/imageView_project_editorFormScreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_4" />

        <View
            android:id="@+id/divider_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_constraintTop_toBottomOf="@id/button_editProject_formEditorScreen" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_experience_editorFormScreen"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_svg_viewer_experience"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_6" />

        <View
            android:id="@+id/divider_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="12dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_optionalText_formEditorScreen" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_experience_formEditorScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button_shape"
            android:text="@string/edit_experience"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_40"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintLeft_toRightOf="@id/imageView_experience_editorFormScreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_6" />

        <View
            android:id="@+id/divider_7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="45dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_experience_formEditorScreen" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_generatePdf_formEditorScreen"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Download PDF"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_shape_dark_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textView_formEditorScreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_experience_formEditorScreen" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>