<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.formeditorscreen.EditSkillsDetailsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_fillSkills_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="Fill all details"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/sp_30"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="95dp"
        android:layout_marginStart="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@+id/textView_fillSkills_editSkillsDetails"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/textView_programLang_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:text="*Enter your programming languages :"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fillSkills_editSkillsDetails" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_programLang_editSkillsDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:background="@drawable/custom_edittext_shape"
        android:hint="eg - java, C++ etc"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_programLang_editSkillsDetails" />

    <TextView
        android:id="@+id/textView_tools_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:text="*Enter tools you are familiar of:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_programLang_editSkillsDetails" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_tools_editSkillsDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:background="@drawable/custom_edittext_shape"
        android:hint="eg - Android studio"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_tools_editSkillsDetails" />

    <TextView
        android:id="@+id/textView_certificates_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="*Certification :"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_tools_editSkillsDetails" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_certificates_editSkillsDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:background="@drawable/custom_edittext_shape"
        android:hint="eg - Android Development, Cloud"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_certificates_editSkillsDetails" />

    <TextView
        android:id="@+id/textView_otherSkills_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="*Other skills"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_certificates_editSkillsDetails" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_otherSkills_editSkillsDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:background="@drawable/custom_edittext_shape"
        android:hint="eg - Web development, SAP"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/secondaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_otherSkills_editSkillsDetails" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_saveSkillsDetails_EditEducationDetails"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Save Skills Details"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/custom_shape_dark_button"
        app:layout_constraintTop_toBottomOf="@id/editText_otherSkills_editSkillsDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>