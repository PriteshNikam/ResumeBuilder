<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.formeditorscreen.EditSkillsDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_fillSkills_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/fill_all_details"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/sp_30"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="95dp"
        android:layout_marginStart="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@+id/textView_fillSkills_editSkillsDetails"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/textView_programLang_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:text="@string/enter_your_programming_languages"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fillSkills_editSkillsDetails" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enterProgrammingLang_SkillsFragment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxBackgroundColor="@color/secondaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="eg. Java, C++"
        app:hintTextColor="@color/primaryDarkColor"
        android:textColorHint="@color/secondaryDarkColor"
        app:boxStrokeColor="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_programLang_editSkillsDetails"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_programLang_editSkillsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView_tools_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:text="@string/enter_tools_you_are_familiar_of"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterProgrammingLang_SkillsFragment" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tools_SkillsFragment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxBackgroundColor="@color/secondaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="eg. Android Studio"
        app:hintTextColor="@color/primaryDarkColor"
        android:textColorHint="@color/secondaryDarkColor"
        app:boxStrokeColor="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_tools_editSkillsDetails"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_tools_editSkillsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView_certificates_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="@string/certification"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tools_SkillsFragment" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/certificate_SkillsFragment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxBackgroundColor="@color/secondaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="eg. Android App Development"
        app:hintTextColor="@color/primaryDarkColor"
        android:textColorHint="@color/secondaryDarkColor"
        app:boxStrokeColor="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_certificates_editSkillsDetails"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_certificates_editSkillsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView_otherSkills_editSkillsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="@string/other_skills"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/certificate_SkillsFragment" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/otherSkills_SkillsFragment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxBackgroundColor="@color/secondaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="eg. Web Development"
        app:hintTextColor="@color/primaryDarkColor"
        android:textColorHint="@color/secondaryDarkColor"
        app:boxStrokeColor="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/textView_otherSkills_editSkillsDetails"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_otherSkills_editSkillsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_saveSkillsDetails_EditEducationDetails"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/save_skills_details"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/custom_shape_dark_button"
        app:layout_constraintTop_toBottomOf="@id/otherSkills_SkillsFragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>